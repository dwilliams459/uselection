
@if(string.IsNullOrEmpty(State.Path) == false)
{
    <path stroke="#ffffff" @onclick="OnStateClick" class="sm_state @FillClass" opacity="1" stroke-opacity="1" stroke-width="1.875" stroke-linejoin="round" transform="@State.Transform" style="@State.Style"fill-opacity="1" d="@State.Path" /> 
    @LabelText()
    <path stroke="#ffffff" @onclick="OnStateClick" class="" opacity="0" stroke-opacity="0" stroke-width="1.875" stroke-linejoin="round" transform="@State.Transform" 
        style="-webkit-tap-highlight-color: rgba(0, 0, 0, 0); opacity: 1; cursor: pointer; stroke-opacity: 0; stroke-linejoin: round; fill-opacity: 0;" fill-opacity="1" d="@State.Path" />  
}

@if (State.HasBullet)
{
    <rect x="@State.BulletX" y="@State.BulletY" class="@FillClass" width="45" height="28.749999999999996" r="5.749999999999999" rx="5.749999999999999" ry="5.749999999999999" stroke="#ffffff" transform="matrix(1,0,0,1,0,0)" opacity="1" stroke-opacity="1" stroke-width="1.875" stroke-linejoin="round" style="-webkit-tap-highlight-color: rgba(0, 0, 0, 0); opacity: 1; cursor: pointer; stroke-opacity: 1; stroke-linejoin: round; fill-opacity: 1;" fill-opacity="1"/>
    @LabelText()
    <rect x="@State.BulletX" y="@State.BulletY" @onclick="OnStateClick" width="45" height="28.749999999999996" r="5.749999999999999" rx="5.749999999999999" ry="5.749999999999999" stroke="#ffffff" transform="matrix(1,0,0,1,0,0)" opacity="0" stroke-opacity="0" stroke-width="1.875" stroke-linejoin="round" 
        style="-webkit-tap-highlight-color: rgba(0, 0, 0, 0); opacity: 0; cursor: pointer; stroke-opacity: 0; stroke-linejoin: round; fill-opacity: 0;" fill-opacity="0"/>
}    
